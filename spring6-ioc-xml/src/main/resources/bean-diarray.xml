<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--陣列類型屬性-->
    <bean id="department" class="com.example.spring6.iocxml.ditest.Department">
        <property name="departmentName" value="Apple"></property>
    </bean>

    <bean id="employee" class="com.example.spring6.iocxml.ditest.Employee">
        <!--普通屬性-->
        <property name="employeeName" value="Andy"></property>
        <property name="age" value="40"></property>
        <!--對象類型屬性-->
        <property name="department" ref="department"></property>
        <!--陣列類型屬性-->
        <property name="loves">
            <array>
                <value>吃飯</value>
                <value>睡覺</value>
                <value>寫code</value>
            </array>
        </property>
    </bean>
</beans>